{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Schemas for cloudbees-core chart validation",
    "type": "object",
    "description": "Enforcing cloudbees-core helm chart format, can be validated by using helm lint. Please read https://helm.sh/docs/topics/charts/#schema-files.",
    "required": [
        "Subdomain",
        "ingress-nginx"
    ],
    "properties": {
        "Subdomain": {
            "type": "boolean"
        },
        "ingress-nginx": {
            "type": "object",
            "required": [
                "Enabled"
            ],
            "properties": {
                "Enabled": {
                    "type": "boolean"
                },
                "controller": {
                    "type": "object",
                    "properties": {
                        "ingressClass": {
                            "description": "example: nginx",
                            "type": "string"
                        },
                        "nodeSelector": {
                            "type": "object",
                            "properties": {
                                "kubernetes.io/os": {
                                    "description": "example: linux",
                                    "enum": [
                                        "linux",
                                        "windows"
                                    ]
                                }
                            }
                        },
                        "service": {
                            "type": "object",
                            "properties": {
                                "externalTrafficPolicy": {
                                    "description": "example: Local",
                                    "enum": [
                                        "Cluster",
                                        "Local"
                                    ]
                                }
                            }
                        },
                        "admissionWebhooks": {
                            "type": "object",
                            "properties": {
                                "patch": {
                                    "type": "object",
                                    "properties": {
                                        "nodeSelector": {
                                            "type": "object",
                                            "properties": {
                                                "kubernetes.io/os": {
                                                    "description": "example: linux",
                                                    "enum": [
                                                        "linux",
                                                        "windows"
                                                    ]
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "defaultBackend": {
                    "type": "object",
                    "properties": {
                        "nodeSelector": {
                            "type": "object",
                            "properties": {
                                "kubernetes.io/os": {
                                    "description": "example: linux",
                                    "enum": [
                                        "linux",
                                        "windows"
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "sidecarinjector": {
            "type": "object",
            "required": [
                "Enabled"
            ],
            "properties": {
                "Enabled": {
                    "type": "boolean"
                }
            }
        },
        "OperationsCenter": {
            "type": "object",
            "required": [
                "Enabled"
            ],
            "properties": {
                "Enabled": {
                    "type": "boolean"
                },
                "Image": {
                    "type": "object",
                    "required": [
                        "dockerImage"
                    ],
                    "properties": {
                        "dockerImage": {
                            "type": "string"
                        },
                        "dockerPullPolicy": {
                            "type": ["string", "null"]
                        }
                    }
                },
                "ImagePullSecrets": {
                    "type": ["string", "array", "null"]
                },
                "CasC": {
                    "type": "object",
                    "required": [
                        "Enabled"
                    ],
                    "properties": {
                        "Enabled": {
                            "type": "boolean"
                        },
                        "ConfigMapName": {
                            "type": "string"
                        }
                    }
                },
                "Platform": {
                    "type": "string",
                    "enum": [
                        "standard",
                        "eks",
                        "aws",
                        "gke",
                        "aks",
                        "openshift",
                        "openshift4"
                    ]
                },
                "ContextPath": {
                    "description": "DEPRECATED - Use OperationsCenter.Name instead",
                    "type": ["string", "null"]
                },
                "HostName": {
                    "type": ["string", "null"]
                },
                "Name": {
                    "description": "example: cjoc",
                    "type": "string"
                },
                "Protocol": {
                    "type": "string",
                    "enum": [
                        "http",
                        "https"
                    ]
                },
                "Port": {
                    "type": "integer",
                    "minimum": 0
                },
                "Resources": {
                    "type": "object",
                    "properties": {
                        "Limits": {
                            "type": "object",
                            "properties": {
                                "Cpu": {
                                    "type": "integer"
                                },
                                "Memory": {
                                    "description": "example: 2G",
                                    "type": "string"
                                }
                            }
                        },
                        "Requests": {
                            "type": "object",
                            "properties": {
                                "Cpu": {
                                    "type": "integer"
                                },
                                "Memory": {
                                    "description": "example: 2G",
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "JavaOpts": {
                    "type": ["string", "null"]
                },
                "JMXPort": {
                    "type": "integer",
                    "minimum": 0
                },
                "RunAsUser": {
                    "type": "integer",
                    "minimum": 0
                },
                "RunAsGroup": {
                    "type": "integer",
                    "minimum": 0
                },
                "FsGroup": {
                    "type": "integer",
                    "minimum": 0
                },
                "JenkinsOpts": {
                    "type": ["string", "null"]
                },
                "ServicePort": {
                    "type": "integer",
                    "minimum": 0
                },
                "ServiceAgentListenerPort": {
                    "type": "integer",
                    "minimum": 0
                },
                "ServiceType": {
                    "enum": [
                        "ClusterIP",
                        "NodePort",
                        "LoadBalancer",
                        "ExternalName"
                    ]
                },
                "ServiceAnnotations": {
                    "type": "object"
                },
                "ContainerPort": {
                    "type": "integer",
                    "minimum": 0
                },
                "AgentListenerPort": {
                    "type": "integer",
                    "minimum": 0
                },
                "HealthProbes": {
                    "type": "boolean"
                },
                "HealthProbeLivenessFailureThreshold": {
                    "type": "integer",
                    "minimum": 0
                },
                "CSRF": {
                    "type": "object",
                    "properties": {
                        "ProxyCompatibility": {
                            "type": "boolean"
                        }
                    }
                },
                "LoadBalancerSourceRanges": {
                    "type": "array"
                },
                "LoadBalancerIP": {
                    "type": ["string", "null"]
                },
                "NodeSelector": {
                    "type": "object"
                },
                "Tolerations": {
                    "type": "array"
                },
                "Annotations": {
                    "type": "object"
                },
                "Ingress": {
                    "type": "object",
                    "properties": {
                        "Class": {
                            "description": "example: nginx",
                            "type": "string"
                        },
                        "Annotations": {
                            "type": "object",
                            "properties": {
                                "kubernetes.io/tls-acme": {
                                    "type": "string"
                                }
                            }
                        },
                        "tls": {
                            "type": "object",
                            "properties": {
                                "Enable": {
                                    "type": "boolean"
                                },
                                "SecretName": {
                                    "type": ["string", "null"]
                                }
                            }
                        }
                    }
                },
                "Route": {
                    "type": "object",
                    "properties": {
                        "tls": {
                            "type": "object",
                            "properties": {
                                "Enable": {
                                    "type": "boolean"
                                },
                                "Termination": {
                                    "description": "example: edge",
                                    "enum": [
                                        "edge",
                                        "passthrough",
                                        "re-encryption"
                                    ]
                                },
                                "InsecureEdgeTerminationPolicy": {
                                    "description": "example: Redirect",
                                    "enum": [
                                        "Redirect",
                                        "Allow",
                                        "None",
                                        ""
                                    ]
                                },
                                "CACertificate": {
                                    "type": ["string", "null"]
                                },
                                "Certificate": {
                                    "type": ["string", "null"]
                                },
                                "Key": {
                                    "type": ["string", "null"]
                                },
                                "DestinationCACertificate": {
                                    "type": ["string", "null"]
                                }
                            }
                        }
                    }
                },
                "ExtraConfigMaps": {
                    "type": "array"
                },
                "ExtraContainers": {
                    "type": "array"
                },
                "ExtraGroovyConfiguration": {
                    "type": "object"
                },
                "TmpVolumeMedium": {
                    "type": "string"
                },
                "ExtraVolumes": {
                    "type": "array"
                },
                "ExtraVolumeMounts": {
                    "type": "array"
                }
            }
        }
    },
    "Master": {
        "type": "object",
        "properties": {
            "Enabled": {
                "type": "boolean"
            },
            "OperationsCenterNamespace": {
                "type": ["string", "null"]
            },
            "Image": {
                "type": "object",
                "properties": {
                    "dockerImage": {
                        "type": "string"
                    }
                }
            },
            "JavaOpts": {
                "type": ["string", "null"]
            }
        }
    },
    "Agents": {
        "type": "object",
        "properties": {
            "Enabled": {
                "type": "boolean"
            },
            "SeparateNamespace": {
                "type": "object",
                "properties": {
                    "Enabled": {
                        "type": "boolean"
                    },
                    "Name": {
                        "type": ["string", "null"]
                    },
                    "Create": {
                        "type": "boolean"
                    }
                }
            },
            "Image": {
                "type": "object",
                "properties": {
                    "dockerImage": {
                        "type": "string"
                    }
                }
            },
            "ImagePullSecrets": {
                "type": ["string", "array", "null"]
            }
        }
    },
    "Persistence": {
        "type": "object",
        "properties": {
            "StorageClass": {
                "type": ["string", "null"]
            },
            "Annotations": {
                "type": "object"
            },
            "AccessMode": {
                "description": "example: ReadWriteOnce",
                "enum": [
                    "ReadWriteOnce",
                    "ReadOnlyMany",
                    "ReadWriteMany",
                    "ReadWriteOncePod"
                ]
            },
            "Size": {
                "description": "example: 20Gi",
                "type": "string"
            }
        }
    },
    "Hibernation": {
        "type": "object",
        "properties": {
            "Enabled": {
                "type": "boolean"
            },
            "Image": {
                "type": "object",
                "properties": {
                    "dockerImage": {
                        "type": "string"
                    },
                    "dockerPullPolicy": {
                        "type": ["string", "null"]
                    }
                }
            },
            "ImagePullSecrets": {
                "type": ["string", "array", "null"]
            },
            "NodeSelector": {
                "type": "object"
            },
            "Tolerations": {
                "type": "array"
            }
        }
    },
    "PodSecurityPolicy": {
        "type": "object",
        "properties": {
            "Enabled": {
                "type": "boolean"
            },
            "Annotations": {
                "type": "object"
            }
        }
    },
    "NetworkPolicy": {
        "type": "object",
        "properties": {
            "Enabled": {
                "type": "boolean"
            },
            "ingressControllerSelector": {
                "type": "array"
            },
            "JMXSelectors": {
                "type": "array"
            }
        }
    },
    "rbac": {
        "type": "object",
        "properties": {
            "install": {
                "type": "boolean"
            },
            "installCluster": {
                "type": "boolean"
            },
            "serviceAccountName": {
                "type": "string"
            },
            "serviceAccountAnnotations": {
                "type": "object"
            },
            "masterServiceAccountName": {
                "type": "string"
            },
            "masterServiceAccountAnnotations": {
                "type": "object"
            },
            "agentsServiceAccountName": {
                "type": "string"
            },
            "agentsServiceAccountAnnotations": {
                "type": "object"
            },
            "hibernationMonitorServiceAccountName": {
                "type": "string"
            }
        }
    }
}